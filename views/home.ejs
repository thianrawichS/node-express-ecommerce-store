<%- include('header') %>

<div class="container-lg">
    <div class="row mt-3">
        <div class="text-center col col-xs-12 col-sm-4 col-md-3 col-xl-2">
            <!-- product category -->
            Product Category
            <ul class="nav nav-pills nav-fill d-flex flex-column">
                <li class="nav-item">
                    <a href="/home" class="nav-link<%if (selectedProductGroupId === undefined){%> active <%}%>"> All </a>
                </li>
                <% productGroup[0].forEach(p => { %>
                <li>
                    <a href="/home?productGroup=<%= p.product_group_id %>" class="nav-link<%if (selectedProductGroupId == p.product_group_id){%> active <%}%>"><%= p.product_group_name %></a>
                </li>
                <% }) %>
            </ul>
        </div>
        <div class="col">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5">
                <!-- product -->
                <% product[0].forEach( (products) => { %>      
                <div class="col m-2" style="width: 250px;">
                    <div class="card h-100">
                        <% if (products.product_stock == 0) { %> <p class="m-0 text-center bg-danger text-white">Out of Stock</p> <% } %>
                        <img src="/images/<%= products.img %>" class="card-img-top p-2 rounded" alt="..." style="height: 150px;">
                        <div class="card-body d-flex flex-column" >
                            <h5 class="card-title">
                                <a href="/product/<%= products.product_id %>"><%= products.product_name %></a>
                            </h5>
                            <div class="flex-grow-1"></div>
                            <p class="card-text"><b>à¸¿ <%= numeral(products.selling_price).format(0,0) %></b></p>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div> 
</div>

    


<%- include('footer') %>
<%-include('header') %>

<div class="container-lg">
    <div class="mt-3 h4">
        Payment Confirmation
    </div>
    <div class="mt-3">
        <form action="/your-order/payment-confirm" method="post" enctype="multipart/form-data">
            <div class="h5">
                <label for="order_id" class="form-label">Order ID:</label>
                <input name="order_id" type="text" value="<%= orderId %>" readonly style="border: none;">
            </div>
            
            <div class="mt-3">
                <label class="form-label" for="pay_date"> Date/Time </label>
                <input class="form-control" name="pay_date" type="datetime-local" required>
            </div>
            
            <div class="form-floating mt-3">
                <textarea maxlength="255" class="form-control" id="pay_remark" name="pay_remark" style="height: 100px"></textarea>
                <label for="pay_remark"> Remark (Optional) </label>
            </div>

            <div class="mt-3">
                <label for="transfer_receipt_img" class="form-label">Transfer Receipt</label>
                <input class="form-control" type="file" name="transfer_receipt_img" accept="image/jpeg, image/png, image/jpg" required>
            </div>
            
            <div class="mt-3">
                <button type="submit" class="btn btn-primary"> Submit </button>
            </div>
        </form>
    </div>
</div>

<%-include('footer') %>
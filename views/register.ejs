<%- include('header') %>

<div class="container-lg">
    <form action="/register" method="post">
        <div class="display-5">
            Register
        </div>
        <div class="mt-3">
            <div class="mt-3">
                <label for="name" class="form-label"> Name </label>
                <input name="name" type="text" class="form-control" required>
            </div>
            <% if (registerStatus == 'failedName') { %>
                <div class="text-danger">
                    Name is already used
                </div>
            <% } %>
            <div class="mt-3">
                <label for="username" class="form-label"> Username </label>
                <input name="username" type="text" class="form-control" required>
            </div>
            <% if (registerStatus == 'failedUsername') { %>
                <div class="text-danger">
                    Username is already used
                </div>
            <% } %>
            <div class="mt-3">
                <label for="password" class="form-label"> Password </label>
                <input name="password" type="password" class="form-control" required>
            </div>
            <div class="mt-3">
                <label for="cfmPassword" class="form-label">Confirm Password</label>
                <input name="cfmPassword" type="password" class="form-control" required>
            </div>
            <% if (registerStatus == 'failedPwd') { %>
                <div class="text-danger">
                    Password and Confirmation must be the same
                </div>
            <% } %>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>
</div>


<%- include('footer') %>
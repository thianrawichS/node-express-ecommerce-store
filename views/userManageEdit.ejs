<%-include('header') %>
<div class="container-lg">
    <div class="display-6 mt-3"> Edit User : <%= userData[0].id %> </div>
    <form action="/edituser" method="post">

        <div class="mt-3">
            <div class="form-check">
                <input type="radio" id="admin" name="level" value="Admin" class="form-check-input" <% if (userData[0].level == 'Admin') { %>checked<% } %>>
                <label for="admin" class="form-check-label">Admin</label>
            </div>
            <div class="form-check">
                <input type="radio" id="user" name="level" value="User" class="form-check-input" <% if (userData[0].level == 'User') { %>checked<% } %>>
                <label for="user" class="form-check-label">User</label>
            </div>
        </div>
        <div class="mt-3">
            <label for="name" class="form-label"> Name </label>
            <input type="text" name="name" class="form-control" value="<%= userData[0].name %>">
        </div>
        <div class="mt-3">
            <label for="username" class="form-label"> Username </label>
            <input type="text" name="username" class="form-control" value="<%= userData[0].username %>">
        </div>
        
        <input type="hidden" name="id" value="<%= userData[0].id %>">
        <input type="hidden" name="originalName" value="<%= userData[0].name %>">
        <input type="hidden" name="originalUsername" value="<%= userData[0].username %>">
        
        <div class="mt-2">
            <a href="/edituser/password/<%= userData[0].id %>"> update password </a>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary"> Save changes </button>
            <button type="button" class="btn btn-secondary"><a href="/usermanage" style="color: white; text-decoration: none;"> Back </a></button>
        </div>
    </form>
    <% if (updateUserStatus.length != 0) { %>
    <div class="<% if(updateUserStatus == "Update User Successfully") { %> bg-success <% } else { %> bg-danger <% } %>  text-white border rounded p-2 mt-3">
        <%= updateUserStatus %>
    </div>
    <% } %>
</div>



<%-include('footer') %>
<%-include('header') %>
<div class="container-lg">
    <!-- Add product group trigger modal -->
    <div class="mt-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductGroupModal">
            Add Type
        </button>
    </div>
    <!-- Add product group Modal -->
    <div class="modal fade" id="addProductGroupModal" tabindex="-1" aria-labelledby="addProductGroupModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="addProductGroupModalLabel"> Add Product Type </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/producttype" method="post">
                    <div class="modal-body">
                        <input type="text" name="product_group_name" class="form-control" placeholder="Product Type">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"> Product type </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% productType.forEach((item, index) => { %>
            <tr>
                <th scope="row"> <%= index+1 %> </th>
                <td> <%= item.product_group_name %> </td>
                <td> 
                    <!-- edit product type modal trigger -->
                    <div>
                        <button type="button" data-bs-toggle="modal" data-bs-target="#editProductGroupModal<%=item.product_group_id%>">
                            edit
                        </button>
                    </div>
                    <!-- edit product type modal -->
                    <div class="modal fade" id="editProductGroupModal<%=item.product_group_id%>" tabindex="-1" aria-labelledby="addProductGroupModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="editProductGroupModalLabel"> Edit Product Type </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form action="/editproducttype/<%=item.product_group_id%>" method="post">
                                    <div class="modal-body">
                                        <input type="text" name="product_group_name" class="form-control" placeholder="Product Type" value="<%= item.product_group_name %>">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div>
                        <button type="button"> <a href="/deleteproducttype/<%=item.product_group_id%>"> delete </a> </button>
                    </div>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>







<%-include('footer') %>
<%-include('header') %>

<div class="container">
    <div class="display-1 text-center"> My Store </div>
    <div class="d-flex justify-content-center mt-5">
      <div class="card p-3" style="width: 500px;">
        <div class="card-body">
          <h5 class="card-title text-center mb-3">Login</h5>
          <div>
            <form action="/login" method="post">
              <div class="mb-3">
                <input name="username" type="text" class="form-control" placeholder="Username" required>
              </div>
              <div class="mb-3">
                <input name="password" type="password" class="form-control" placeholder="Password" required>
              </div>
              <% if (loginStatus == 'failed') { %>
              <div class="mb-3 text-danger">
                Username / Password is incorrect
              </div>
              <% } %>
              <div>
                <button type="submit" class="btn btn-primary"> Login </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-3">
      <div class="text-center">
        don't have an account ?
      </div>
      <div class="text-center">
        <button class="btn btn-success btn-sm"><a href="/register" class="text-white"> Register </a></button>
      </div>
    </div>
  </div>

  <%-include('footer') %>
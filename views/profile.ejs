<%-include('header') %>
<div class="container-lg">
    <div class="display-5 mt-3">
        Profile
    </div>
    <div class="border rounded p-3 mt-3">
        <form action="/profileEdit/<%= id %>" method="post">
            <div>
                <label for="level" class="form-label ms-2">Level</label>
                <span class="ms-2"><input name="level" type="text" value="<%= level %>" class="rounded ps-2" readonly style="background-color: lightgray;"></span>
            </div>
            <div class="mt-3">
                <label for="name" class="form-label"> Name </label>
                <input name="name" type="text" class="form-control" value="<%= name %>">
                <input name="originalName" type="hidden" value="<%= name %>">
            </div>
            <div>
                <a href="/profile/edit-password/<%= id %>"> Change Password </a>
            </div>
            <div class="mt-3 mb-3">
                <button type="submit" class="btn btn-primary" > Save changes </button>
            </div>
            <% if(updateUserStatus.length != 0) { %>
            <div class="mt-3 p-2 border rounded <% if (updateUserStatus == '') %>">
                <%= updateUserStatus %>
            </div>
            <% } %>
        </form>
    </div>
</div>


<%-include('footer') %>
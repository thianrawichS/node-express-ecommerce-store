<%-include('header') %>

<div class="container-lg">
    <div class="border rounded p-3 mt-3">
        <div class="h4 mt-3"> Shipping Order </div>

        <form action="/order/ship-order" method="post">
            <div>
                <label class="form-label"> Order ID </label>
                <input style="width: 30%;" class="form-control" name="order_id" type="number" value="<%= orderId %>" readonly>
            </div>
            <div class="mt-3" style="width: 30%;">
                <input type="datetime-local" name="send_date" class="form-control" required>
            </div>

            <div class="row mt-3">
                <div class="col-3">
                    <select name="shipping_name" class="form-select" required>
                        <option value="" disabled selected>Select Shipping</option>
                        <option value="Kerry"> Kerry </option>
                        <option value="Flash"> Flash Express </option>
                        <option value="J&T">J&T</option>
                    </select>
                </div>
                <div class="col-9">
                    <input name="shipping_tracking" type="text" placeholder="Tracking No." class="form-control" required>
                </div>
            </div>
             
            <div class="mt-3">
                <button type="submit" class="btn btn-primary"> Save </button>
                <button class="btn btn-secondary" type="button"><a href="/order" style="color: white;"> Back </a></button>
            </div>

        </form>

    </div>
</div>

<%-include('footer') %>